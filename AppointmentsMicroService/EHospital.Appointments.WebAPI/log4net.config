<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="LogFile" type="log4net.Appender.FileAppender">
    <file value="./AppointmentLog.log" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5p %utcdate{dd MMM yyyy HH:mm:ss} %logger [%thread] %m%n %exception%n " />
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="LogFile" />
  </root>
</log4net>